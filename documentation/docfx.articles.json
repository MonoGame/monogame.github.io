{
  "build": {
    "content": [
      {
        "files": [
          "articles/**/*.md",
          "articles/**/*.yml",
          "foundation/**/*.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "bin/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**",
          "codesnippet/**",
          "scripts/*.js"
        ]
      }
    ],
    "output": "../_site",
    "globalMetadata": {
      "_appLogoPath": "images/monogame_title_dark.svg",
      "_appFaviconPath": "images/favicon.png",
      "_disableBreadcrumb": "true",
      "_appFooter": "Copyright Â© 2009-2023 MonoGame Foundation, Inc.",
      "_hostname": "monogame.github.io",
      "_openGraphImage": "images/horizontallogo.png",
      "_description": "One framework for creating powerful cross-platform games.",
      "_appTitle": "MonoGame"
    },
    "fileMetadata": {
      "_layout": {
        "*.md": "landing"
      }
    },
    "template": [
      "default",
      "modern",
      "templates/monogame"
    ],
    "postProcessors": [],
    "keepFileLink": false,
    "disableGitFeatures": false
  }
}